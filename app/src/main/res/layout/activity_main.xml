<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.adamwhitakerwilson.dgtosc.MainActivity"
    tools:ignore="Overdraw">

    <EditText
        android:id="@+id/editTextIpAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="132dp"
        android:ems="10"
        android:inputType="text|numberDecimal"
        android:textColor="@android:color/darker_gray"
        tools:ignore="LabelFor,RelativeOverlap" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTextIpAddress"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:text="@string/ip"
        android:textColor="@android:color/darker_gray"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="39dp"
        android:text="@string/Port"
        android:textColor="@android:color/darker_gray"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/editTextPort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editTextIpAddress"
        android:layout_alignTop="@+id/textView2"
        android:ems="10"
        android:inputType="number"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp"
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextPort"
        android:layout_marginTop="11dp"
        android:background="#8a4d3d1f"
        android:text="@string/connect"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:id="@+id/textViewValidate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView2"
        android:layout_below="@+id/connect"
        android:layout_marginTop="30dp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="14dp"
        android:background="#8a4d3d1f"
        android:text="@string/next"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp" />

    <RadioGroup
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignEnd="@+id/editTextPort"
        android:layout_alignTop="@+id/connect"
        android:layout_marginTop="19dp">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="@string/draw"
            android:textColor="@android:color/darker_gray" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/generate"
            android:textColor="@android:color/darker_gray" />
    </RadioGroup>

</RelativeLayout>
