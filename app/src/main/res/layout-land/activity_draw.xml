<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    tools:ignore="Overdraw,UnusedResources">


    <com.example.adamwhitakerwilson.dgtosc.DrawActivity.DrawingView
        android:id="@+id/canvasDrawView"


        android:layout_width="200dp"
        android:layout_height="250dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-2dp"
        tools:ignore="RtlHardcoded" />

    <SeekBar
        android:layout_width="187dp"
        android:layout_height="61dp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="180dp"
        android:layout_marginLeft="81dp"
        app:layout_constraintLeft_toRightOf="@+id/canvasDrawView"
        app:layout_constraintTop_toTopOf="@+id/canvasDrawView"
        android:layout_marginTop="8dp"
        tools:ignore="RtlHardcoded" />

</android.support.constraint.ConstraintLayout>
